<?xml version="1.0" encoding="UTF-8" ?>
    <Module>
    <ModulePrefs title="Summary of the project"
                 author="WSO2 Dev governance"
                 height="230"
                 scrolling="true"
                 tags="charts,bar,visualization,data"
                 description=" Displays git summary of the project">
